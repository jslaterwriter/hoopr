<% include ../partials/header.ejs %>


<section id="court-form">
    
    
    <form action="/courts" method="POST">
        <h1>NEW COURT</h1>
        <p>Name:</p>
        <input class="single" type="text" name="name" placeholder="name"></br>
        <p>Image URL:</p>
        <input class="single" type="text" name="image" placeholder="image url"></br>
        <p>Address:</p>
        <input type="text" name="address[street]" placeholder="street">
        <input type="text" name="address[city]" placeholder="city"></br>
        <input type="text" name="address[state]" placeholder="state">
        <input type="text" name="address[zip]" placeholder="zipcode">
    
        <p>HOURS:</p>
        <p>Open:</p>
        <input type="number" name="hours[open][hour]" min="1" max="12"> <span>:</span>
        <input type="number" name="hours[open][minute]" min="1" max="59">
        <select name="hours[open][period]">
            <option>AM</option>
            <option>PM</option>
        </select>
        
        <p>Close:</p>
        <input type="number" name="hours[close][hour]" min="1" max="12"> <span>:</span>
        <input class="down" type="number" name="hours[close][minute]" min="1" max="59">
        <select name="hours[close][period]">
            <option>AM</option>
            <option>PM</option>
        </select></br>
        <button id="create-court-button">Create Court</button>
    </form>
</section>

<% include ../partials/footer.ejs %>    